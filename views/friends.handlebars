       </div>
        
   </div>
      </div>
      {{/each}}

 
  </div>
  <div class="col-sm-4 bg-primary">.col-sm-3</div>
 
</div>
</div>
<script>
$("button").on("click",(e)=>{
  e.preventDefault();
  $(e.currentTarget).text("Sending.....");
  console.log("button clicked");
    $.ajax({
    url:'friends/sendrequest',
    type: 'post',
    data:{friendid:$(e.currentTarget).data("id")},
    success: function(data){
    if(data.success){
    $(e.currentTarget).text("Request SENT");
}   else {
    $(e.currentTarget).text("Request SENT Failed");
}
},
error: function(){
alert("general maybe ajax syntax");
}
});
});

</script>