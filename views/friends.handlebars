    <input type="submit" value="{{name}}" class="btn btn-link">
    </form>
    {{/each}}
  </div>
  <div class="col-sm-4 bg-danger" style="height: 1024px;">Peoples you may know <br>
      find friends : <br>
      {{#each newFriends as |nf|}} 
      <div>
   <div class="card bg-success" style="max-width: 180px;max-height:150px;margin:15px">
       <div class="card-body">
         <img class="card-img-top  rounded-circle" src="img/pro.jpg" alt="Card image">
       <a href="#" class="text-center" style="color: black;text-align: center;" data-id="{{nf.id}}"><b class="text-center">{{nf.name}}</b></a>
